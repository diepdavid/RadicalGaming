@page
@using Microsoft.AspNetCore.Mvc.ModelBinding
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-8">
        <form id="profile-form" class="row" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3 col-md-12">
                <input asp-for="Input.Name" class="form-control" placeholder="Please enter your full name." />
                <label asp-for="Input.Name" class="form-label p-3">First and last name</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label p-3"></label>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="form-label p-3"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.StreetAddress" class="form-control" placeholder="Please enter your street address." />
                <label asp-for="Input.StreetAddress" class="form-label p-3">Street address</label>
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.PostalCode" class="form-control" placeholder="Please enter your postal code." />
                <label asp-for="Input.PostalCode" class="form-label p-3">Postal code</label>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.City" class="form-control" placeholder="Please enter your city." />
                <label asp-for="Input.City" class="form-label p-3"></label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.State" class="form-control" placeholder="Please enter your state." />
                <label asp-for="Input.State" class="form-label p-3"></label>
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
            <div class="custom-file mb-3 col-md-12">
                <label class="custom-file-label" ></label>
                <input type="file"
                       accept="image/*"
                       asp-for="Input.ProfilePicture"
                       class="custom-file-input"
                       onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])"/>
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Input.ProfilePicture" class="w-100">Profile Picture</label>
            @if (Model.Input.ProfilePicture != null)
            {
                <img id="profilePicture" alt="profile" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))"
                     style="width: 200px; height: 200px; object-fit: cover;">

            }
            else
            {
                <img id="profilePicture" alt="profile" src="~/images/profile/default-profile-picture.png"
                     style="width: 200px; height: 200px; object-fit: cover;">
            }

        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
