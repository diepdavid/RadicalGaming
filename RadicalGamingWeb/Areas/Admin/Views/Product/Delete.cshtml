@model RadicalGaming.Model.Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden/>
            <div class="border-0 p-3">
                <div class="mb-3 row p-1">
                    <!-- row gör så det bli responsive -->
                    <label asp-for="Title" class="p-0">Product Name</label>
                    <input asp-for="Title" disabled class="form-control" /> <!-- form-control gör så den fylls ut -->
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Description" class="p-0">Description</label>
                    <input asp-for="Description" disabled class="form-control" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price" class="p-0">Price</label>
                    <input asp-for="Price" disabled class="form-control" />
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <!-- Buttons ta 6 col vi -->
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
