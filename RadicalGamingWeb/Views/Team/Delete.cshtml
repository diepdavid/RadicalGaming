@model Team

<form method="post">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Member</h2>
            <hr/> <!-- Horizontal line -->
        </div>
        <div class="mb-3 row p-1">
            <!-- row gör så det bli responsive -->
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled class="form-control"/> <!-- form-control gör så den fylls ut -->
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" disabled class="form-control"/>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <!-- Buttons ta 6 col vi -->
                <a asp-controller="Team" asp-action="Index" class="btn btn-outline-secondary border form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>